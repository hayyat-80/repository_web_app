<h1>Welcome</h1>
<% if logged_in? %>
    <span>
        <h1>You are Logged In, <%= current_user.email %>
            <%= button_to "Logout", logout_path, method: :delete%>
        </h1>
    </span>

    <%= button_to "Create New Repository", new_repository_path, method: :get%>
    
    <%= form_with(url: '/welcome', method: :get, local: true) do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search"%>
    <% end %>

    <%= render "repositories/index", repositories: @repositories %>
<% else %>
    <%= button_to "Login", login_path, method: :get%>
    <%= button_to "Sign Up", new_user_path, method: :get%>
<%end%>

